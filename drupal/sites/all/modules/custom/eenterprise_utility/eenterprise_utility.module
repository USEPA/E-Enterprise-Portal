/*Test New Mexico SSO from EEP to SEP*/
function sso_eep_to_sep() {
  $output = '<form action="https://sep.net-t.env.nm.gov/sep-envd/bridge" method="post">';
  $output .= '<input type="hidden" name="securityToken" value="' . $_SESSION['cdx_fmw_security_token'] . '">';
