{
  "name": "drupal-composer/drupal-project",
  "description": "Project template for Drupal 8 projects with composer",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "",
      "role": ""
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    }
  ],
  "require": {
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6",
    "drupal-composer/drupal-scaffold": "^2.5",
    "drupal/admin_toolbar": "^1.24",
    "drupal/advagg": "^3.5",
    "drupal/backup_migrate": "^4.0",
    "drupal/bootstrap_barrio": "4.17",
    "drupal/bootstrap_library": "^1.11",
    "drupal/bootstrap_sass": "^1.6",
    "drupal/captcha": "^1.0@beta",
    "drupal/components": "^1.0",
    "drupal/config_actions": "^1.0@beta",
    "drupal/config_filter": "^1.2",
    "drupal/config_split": "^1.3",
    "drupal/console": "^1.0.2",
    "drupal/core": "~8.5.3",
    "drupal/ctools": "^3.0",
    "drupal/default_content": "^1.0@alpha",
    "drupal/devel": "^1.2",
    "drupal/diff": "^1.0@RC",
    "drupal/entity_browser": "^1.5",
    "drupal/entity_reference_revisions": "^1.5",
    "drupal/field_group": "^1.0",
    "drupal/google_analytics": "^2.3",
    "drupal/guzzlerestgenerator": "3.1",
    "drupal/page_manager": "^4.0@beta",
    "drupal/panelizer": "^4.1",
    "drupal/panels": "^4.3",
    "drupal/paragraphs": "^1.3",
    "drupal/pathauto": "^1.2",
    "drupal/redirect": "^1.2",
    "drupal/search_api": "^1.9",
    "drupal/simple_sitemap": "^2.12",
    "drupal/sqlsrv": "^1.0",
    "drupal/supercache": "^1.3",
    "drupal/token": "^1.3",
    "drupal/webform": "^5.0@RC",
    "drupal/webform_analysis": "^1.0@beta",
    "drupal/webform_composite": "^1.0@beta",
    "drupal/webform_views": "^5.0@alpha",
    "drupal/wincachedrupal": "^1.11",
    "drush/drush": "^9.0.0",
    "vlucas/phpdotenv": "^2.4",
    "webflo/drupal-finder": "^1.0.0",
    "webmozart/path-util": "^2.3"
  },
  "require-dev": {
    "webflo/drupal-core-require-dev": "~8.5.3"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "classmap": [
      "scripts/composer/ScriptHandler.php"
    ],
    "files": [
      "load.environment.php"
    ]
  },
  "scripts": {
    "pre-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "pre-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
    ],
    "post-install-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "npm install --global gulp-cli",
      "npm install bootstrap@^4.0 --prefix web/themes/custom/eep",
      "npm install gulp browser-sync gulp-sass gulp-autoprefixer gulp-compress gulp-minify-css gulp-sourcemaps gulp-uglify gulp-concat --save-dev  --prefix web/themes/custom/eep",
      "npm install --prefix ../app/",
      "npm run build --prefix ../app/",
      "xcopy /S /I /E /Y web\\modules\\contrib\\sqlsrv\\drivers web\\drivers"
    ],
    "post-update-cmd": [
      "DrupalProject\\composer\\ScriptHandler::createRequiredFiles",
      "@php web/profiles/e_enterprise_portal/post-deployment-update.php",
      "npm run build --prefix ../app/",
      "xcopy /S /I /E /Y web\\modules\\contrib\\sqlsrv\\drivers web\\drivers"
    ],
    "test-cmd": [
      "xcopy /S /I /E /Y web\\modules\\contrib\\sqlsrv\\drivers web\\drivers"
    ]
  },
  "extra": {
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/contrib/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ]
    },
    "drupal-scaffold": {
      "initial": {
        ".editorconfig": "../.editorconfig",
        ".gitattributes": "../.gitattributes"
      }
    }
  }
}
